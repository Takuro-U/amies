{
    "compilerOptions": {
        "target": "es6",
        "module": "es6",
        "jsx": "react-jsx",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,

        //jsonの読み込み設定
        "resolveJsonModule": true
    },
    "include": ["resources/**/*"]
}
